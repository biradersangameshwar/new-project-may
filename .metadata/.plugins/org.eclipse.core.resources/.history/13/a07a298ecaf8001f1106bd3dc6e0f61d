
public class String_rev {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
              
		String str = "Mahadev";
		char ch[] = str.toCharArray();
		int len = str.length();
		System.out.println(len);
		for(int i=len-1;i>=0;i--) {
			System.out.print(ch[i]);
		}
	}

}
